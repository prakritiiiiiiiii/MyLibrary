@*@model LibraryWeb.Areas.Admin.ViewModel.CategoryIndexVm*@
@model List<Category>

<partial name="_Notification"/>


    <div class="container">
        <div class="row">
            <div class="col-12">
                <form>
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-2">
                                   @* <div class="form-group">
                                        <label asp-for="Name"></label>
                                        <input class="form-control" asp-for="Name" name="Name"/>
                                    </div>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">
                    Category List
                </h2>
            </div>
        <div class="col-6 text-end" >
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i> Create New Category
            </a>

        </div>
        </div>


<table class="table table-bordered table-striped">

    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th></th>

        </tr>
    </thead>

    <tbody>
           @foreach(var obj in Model)
            {

            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.DisplayOrder
                </td>
                <td> 
                    <div class="w-75 btn-group" role="group">
                        <a href="/Admin/Category/Edit?Id=@obj.Id"  class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                        </a>
                            <a href="/Admin/Category/Delete?Id=@obj.Id" class="btn btn-danger mx-2">
                             <i class="bi bi-trash-fill"></i> Delete
                            </a>

                           
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

    </div>