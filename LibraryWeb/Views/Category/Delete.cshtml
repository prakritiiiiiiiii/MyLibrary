@model Category


<form method="post">
    <div class="container  border pt-3 mt-4 ">
        <div class="row pb-2">
            <h3 class="text-bg-primary">Delete Category</h3>

        </div>
        <div class="mb-3 row pb-2">
            <label asp-for="Name" class="p-0"> </label>
            <input asp-for="Name" class="form-control" />
           
        </div>
        <div class="mb-3 row pb-2">
            <label asp-for="DisplayOrder" class="p-0 "> </label>
            <input asp-for="DisplayOrder" class="form-control" />
           
        </div>

        <div class="row">
            <div class="col-6 col-md-3 ">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>

            <div class="col-6 col-md-3">
                <a asp asp-controller="Category" asp-action="Index" class="btn btn-primary form-control">
                    Back to List
                </a>

            </div>
        </div>



    </div>
</form>

